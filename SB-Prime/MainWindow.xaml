                                        <DataTemplate>
                                            <Button Content="{ x:Static local:Strings.Label218 }" Click="debugDataSet" ToolTip="{ x:Static local:Strings.Label217 }" Tag="{Binding}" Background="{DynamicResource GridBrushBackground}" Foreground="{DynamicResource GridBrushForeground}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="{ x:Static local:Strings.Label219 }">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="{ x:Static local:Strings.Label221 }" Click="debugDataRefresh" ToolTip="{ x:Static local:Strings.Label220 }" Tag="{Binding}" Background="{DynamicResource GridBrushBackground}" Foreground="{DynamicResource GridBrushForeground}"/>
